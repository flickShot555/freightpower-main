rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Super Admin avatars
    match /super_admins/{uid}/{allPaths=**} {
      // Allow only the owner AND only if the caller is a super_admin.
      allow read, write: if request.auth != null
                         && request.auth.uid == uid
                         && request.auth.token.role == 'super_admin';
    }

    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
